<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_send_confirm" model="mail.template">
            <field name="name">Undelivered Purchase Order</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="email_from">${ctx['partner_from']} </field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Email Send</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.partner_id.name},
                            <br/>
                            <br/>
                            Undelivered Purchase Order Sheets And That Order Link
                            <br/>
                            <br/>
                            Regards,
                            <br/>
                        </p>
                    </div>
                </div>
            </field>
    </record>
</odoo>
