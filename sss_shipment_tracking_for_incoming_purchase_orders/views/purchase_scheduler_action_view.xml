<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record model="ir.cron" id="send_mail_user_cron">
        <field name="name">Undelivered Purchase Order Scheduler</field>
        <field name="user_id" ref="base.user_root" />
        <field name="model_id" ref="model_purchase_order"/>
        <field name="state">code</field>
        <field name="code">model._cron_generate_mail()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=4)).strftime('%Y-%m-%d 02:30:00')"/>
        <field name="numbercall">1</field>
        <field name="doall" eval="False"/>
      </record>
    </data>
</odoo>
