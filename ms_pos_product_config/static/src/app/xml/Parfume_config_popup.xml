<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ms_pos_product_config.ParfumeConfigWIdget">
        <div class="popup WildCard" style="max-width: 725px !important;">
            <div class="modal-header drag-handle">
                <h4 class="modal-title">Bottle Creation</h4>
            </div>
            
            <div class="modal-body">
                <div class="table-responsive js-selected-scent-list" style="padding-top: 5px;">
                    <table class="table table-striped" style="width: 100%;">
                        <tbody>    
                            <tr class="line-select" data-scent-id="1">
                                <td class="text-center" style="width: 18%;text-align: left;padding-left: 15px;padding-right: 15px;">Bottle Name
                                </td>

                                <td class="text-center">
                                    <input type="text" class="bottle_name" t-att-value="props.bottle_name || ''" placeholder="Bottle Name" disabled="disabled"/>
                                </td>
                            </tr>

                            <tr class="line-select" data-scent-id="1">
                                <td class="text-center" style="width: 15%;text-align: left;padding-left: 15px;padding-right: 15px;">Engrave Name
                                </td>
                                <td class="text-center">
                                    <input type="text" name="section_name" t-att-value="props.section_name  || ''" class="section_name" placeholder="Engrave Name" required="True"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <h4 class="card-title">
                    Selected Scent
                </h4>

                <div class="card-content touch-scrollable scrollable-y" style="min-height: 20px;">
                        <div class="table-responsive js-selected-scent-list" style="padding-top: 5px;">
                            <table class="table table-striped" style="width: 100%;">
                                <thead>
                                    <tr style="border-bottom: 1px solid;margin-bottom: 10px;">
                                        <th class="text-left" style="width: 50%;">Name</th>
                                        <th class="text-left" style="width: 20%;">Quantity</th>
                                        <th class="text-left" style="width: 20%;">Uom</th>
                                        <th class="text-left" style="width: 10%;"></th>
                                    </tr>
                                </thead>
                                <tbody id="selected_scent">
                                    <t t-if="props.remaining_scents > 0">
                                        <tr id="add_scent_container">
                                            <td style="text-align: center; padding-left: 15px;">
                                                <a href="#" id="add_scent" style="color: royalblue;" t-on-click="addScentHandler">Add Scent</a>
                                            </td>
                                            <td colspan="3">
                                            </td>
                                        </tr>

                                        <tr id="select_scent_container">
                                            <td class="text-center" style="padding-top: 10px;">

                                                <select id="scent_id" placeholder="Select Scent...">
                                                    <option value="">None</option>
                                                    <t t-foreach="pos.db.product_scents" t-as="prod" t-key="prod.id">
                                                        <option t-att-value="prod.id">
                                                            <t t-esc="prod.display_name" />
                                                        </option>
                                                    </t>
                                                </select>
                                            </td>
                                            <td class="text-center" style="padding-top: 10px;">
                                                <input type="number" name="scent_qty" id="scent_qty" placeholder="Scent Qty" required="True"/>
                                            </td>
                                            <td class="text-center" style="padding-top: 10px;">
                                                g
                                                <!-- <input type="text" disabled="disabled"/> -->
                                            </td>
                                            <td class="text-center" style="padding-top: 10px;">
                                                <button class="btn btn-danger delete_scent" t-on-click="deleteScent">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>

            <footer class="footer modal-footer">
                <button class="button btn btn-lg btn-primary" t-on-click="confirm">
                    Confirm
                </button>

                <button class="button btn btn-lg btn-primary" t-on-click="cancel">
                    Cancel
                </button>
            </footer>
        </div>
    </t>
</templates>