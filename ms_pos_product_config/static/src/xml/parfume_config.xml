<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ParfumeConfigButton">
        <div class='control-button js_parfume_config'>
            <i class="fa fa-gear"></i> Parfume Config
        </div>
    </t>

    <t t-name="ParfumeConfigWIdget">
        <div class="modal-dialog" id="parfume_config_widget">
            <div class="popup" style="width: 900px; min-height: 600px;">
                <div class="card" style="min-height: 480px;">
                    <h4 class="card-title">
                        <u>
                            Bottle Creation
                        </u>
                    </h4>
                    <div class="card-content" style="padding-top: 10px;">
                        <div class="table-responsive js-selected-scent-list" style="padding-top: 5px;">
                            <table class="table table-striped" style="width: 100%;">
                                <tbody>
                                    <tr class="line-select" data-scent-id="1">
                                        <td class="text-center" style="width: 18%;text-align: left;padding-left: 15px;">Bottle Name
                                        </td>

                                        <td class="text-center">
                                            <input type="text" class="bottle_name" t-att-value="widget.options.bottle_name || ''" placeholder="Bottle Name" disabled="disabled"/>
                                        </td>
                                    </tr>
                                    <tr class="line-select" data-scent-id="1">
                                        <td class="text-center" style="width: 15%;text-align: left;padding-left: 15px;">Engrave Name
                                        </td>
                                        <td class="text-center">
                                            <input type="text" name="section_name" t-att-value="widget.options.section_name  || ''" class="section_name" placeholder="Engrave Name" required="True"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <h4 class="card-title">
                            Selected Scent
                        </h4>
                    </div>
                    <div class="card-content touch-scrollable scrollable-y" style="min-height: 20px;">
                        <div class="table-responsive js-selected-scent-list" style="padding-top: 5px;">
                            <table class="table table-striped" style="width: 100%;">
                                <thead>
                                    <tr style="border-bottom: 1px solid;margin-bottom: 10px;">
                                        <th class="text-left" style="width: 50%;">Name</th>
                                        <th class="text-left" style="width: 20%;">Quantity</th>
                                        <th class="text-left" style="width: 20%;">Uom</th>
                                        <th class="text-left" style="width: 10%;"></th>
                                    </tr>
                                </thead>
                                <tbody id="selected_scent">
                                    <t t-if="widget.options.remaining_scents > 0">
                                        <tr id="add_scent_container">
                                            <td style="text-align: center; padding-left: 15px;">
                                                <a href="#" id="add_scent" style="color: royalblue;">Add Scent</a>
                                            </td>
                                            <td colspan="3">
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="button confirm" id="con_button">
                        Confirm
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="new_scent">
        <td class="text-center" style="padding-top: 10px;">
            <input type="text" id="scent_id" name="scent[]['id']" class="scent_id" required="True"/>
        </td>
        <td class="text-center" style="padding-top: 10px;">
            <input type="number" name="scent[]['qty']" class="scent_qty" placeholder="Scent Qty" required="True"/>
        </td>
        <td class="text-center" style="padding-top: 10px;">
            g
            <!-- <input type="text" disabled="disabled"/> -->
        </td>
        <td class="text-center" style="padding-top: 10px;">
            <button class="btn btn-danger delete_scent">
                <i class="fa fa-trash"></i>
            </button>
        </td>
    </t>

    <t t-name="BottlePackLotLinePopupWidget">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-text">
                <header class="title">
                    <t t-esc=" widget.options.title || '' " />
                </header>
                <main class='packlot-lines'>
                    <t t-if="widget.options.pack_lot_lines">
                        <t t-set="focus_lot_line" t-value="widget.focus_model || widget.options.pack_lot_lines.get_empty_model()"/>
                        <t t-foreach='widget.options.pack_lot_lines.models' t-as='lot_line'>
                            <input type="text" t-att-cid="lot_line.cid" t-att-value="lot_line.get('lot_name')" t-att-autofocus="lot_line === focus_lot_line ? 'autofocus': undefined" class="popup-input packlot-line-input" placeholder="Serial/Lot Number"/>
                            <i class="oe_link_icon remove-lot fa fa-trash-o" role="img" aria-label="Remove" title="Remove"></i>
                        </t>
                    </t>
                </main>
                <footer class="footer">
                    <div class="button confirm">
                        Ok
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>
</templates>
