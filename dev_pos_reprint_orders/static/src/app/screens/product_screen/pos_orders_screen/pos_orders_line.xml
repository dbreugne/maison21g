<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="dev_pos_reprint_orders.OrderlistLine">
        <tr t-attf-class="partner-line {{highlight}}" t-att-data-id="props.order.id">
            <td class='order-name'>
                <t t-esc='props.order.name' />
            </td>
            <td class='order-ref'>
                <t t-esc='props.order.pos_reference' />
            </td>
            <td class='order-partner'>
                <t t-esc='props.order.partner_id[1] or ""' />
            </td>
            <td class='order-date'>
                <t t-esc="get_order_date(props.order.date_order)" />
            </td>
            <td class='order-tot'>
                <t t-esc='env.utils.formatCurrency(props.order.amount_total)' />
            </td>
            <td class='order-print'>
                <button class='edit-partner-button btn btn-light border' t-on-click.stop="() => this.props.onClickRePrint(props.order)"><i class="fa fa-print"></i><span style="margin-left: 4px;">Print</span></button>
            </td>
        </tr>
    </t>

</templates>
