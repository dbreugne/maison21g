<?xml version="1.0" encoding="utf-8"?>
<!--
 -->
<odoo>
	<!-- Inherited view -->
	<record id="dev_view_pos_config_inherit_form" model="ir.ui.view">
        <field name="name">view.pos.config.inherit.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_section']" position="after">

                <block title="Load POS Orders" id="pos_orders_section">
                    
                    <setting >
                        <field name="load_pos_order"/>
                        <div class="content-group mt16" invisible="not load_pos_order">
                            <label string="Last Days" for="last_days" class="col-md-3 o_light_label"/>
                            <field name="last_days"/>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>

</odoo>
        
