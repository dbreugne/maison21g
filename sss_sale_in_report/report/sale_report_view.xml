<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    	<record id='sale_in_report_tree_view' model='ir.ui.view'>
            <field name='name'>sale.in.report.tree.view</field>
            <field name='model'>sale.in.report</field>
            <field name='arch' type='xml'>
                <tree>
                    <field name="sales_quantity"/>   
                    <field name="total_revenue"/>
                    <field name="actual_selling_price"/>
                    <field name="product_category_id"/>
                    <field name="partner_id"/>
                    <field name="industry_id"/>
                    <field name="total_price"/>
                    <field name="user_id"/>
                    <field name="total_discount"/>
                    <field name="currency_id" invisible="1"/>
                </tree> 
            </field>
        </record>
        <record id="sale_in_report_form_view" model="ir.ui.view">
	        <field name="name">sale.in.report.form.view</field>
	        <field name="model">sale.in.report</field>
	        <field name="arch" type="xml">
	            <form string="Commission">

	                <sheet>

	                    <group>
	                        <group>
	                            <field name="sales_quantity"/>   
			                    <field name="total_revenue"/>
			                    <field name="actual_selling_price"/>
			                    <field name="product_category_id"/>
			                    <field name="partner_id"/>
			                    <field name="industry_id"/>
			                    <field name="total_price"/>
			                    <field name="user_id"/>
			                    <field name="total_discount"/>
			                    <field name="currency_id" invisible="1"/>
	                        </group>

	                        <group>
	                            
	                        </group>
	                    </group>
	                    
	                </sheet>
	            </form>
	        </field>
    	</record>
    	<record id="sale_in_report_pivot_view" model="ir.ui.view">
	        <field name="name">sale.in.report.pivot.view</field>
	        <field name="model">sale.in.report</field>
	        <field name="arch" type="xml">
	            <pivot string="Sale In Report">
	           		<field name="total_revenue"/>
                    <field name="actual_selling_price"/>
                    <field name="product_category_id"/>
                    <field name="partner_id"/>
                    <field name="industry_id"/>
                    <field name="total_price"/>
                    <field name="user_id"/>
                    <field name="total_discount"/>
                    <field name="currency_id" invisible="1"/>
	            </pivot>
	        </field>
    	</record>

	    <record id="action_sale_in_report" model="ir.actions.act_window">
	        <field name="name">Sale In Report</field>
	        <field name="res_model">sale.in.report</field>
	        <field name="binding_view_types">form</field>  
	        <field name="view_id" eval="sale_in_report_tree_view"></field>
	        <field name="view_mode">tree,form,pivot</field>
	    </record>
	    <menuitem id="menu_sale_in_report"
			      name="Sale In Report"
			      action= "action_sale_in_report"
			      parent="point_of_sale.menu_point_rep"
			      sequence="3"/>
	   
    </data>
</odoo>
