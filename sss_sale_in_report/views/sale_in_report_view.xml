<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<record id="sale_in_report_pivot_view" model="ir.ui.view">
	        <field name="name">sale.in.reports.pivot.view</field>
	        <field name="model">sale.in.reports</field>
	        <field name="arch" type="xml">
	            <pivot string="Sale In Report" disable_linking="True">
                    <field name="order_date" type="row"/>
                    <field name="product_category_id" type="row"/>
                    <field name="product_id"/>
                    <field name="industry_id" type="col"/>
                    <field name="partner_id" type="col"/>
                    <field name="team_id" />
                    <field name="total_price" type="measure" widget="monetary"/>
                    <field name="actual_selling_price" type="measure"/>
	           		<field name="total_revenue" type="measure"/>
	           		<field name="sales_quantity" type="measure"/>
                    <field name="average_price" type="measure"/>
                    <field name="user_id" type="measure" invisible="1"/>
                    <field name="pos_config_id"/>
                    <field name="pos_order_id"/>
                    <field name="uom_id" type="measure" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
	            </pivot>
	        </field>
    	</record>

    	<record id="sale_in_report_view_search" model="ir.ui.view">
            <field name="name">sale.in.report.search</field>
            <field name="model">sale.in.reports</field>
            <field name="arch" type="xml">
                <search string="Sale In Reports">
                    <filter string="Customer" name="partner_id"
                            domain="[('partner_id', 'in', [194420,238589,40524,53334,134293,172463,29959,292780,73961,61248,32471,286273,307513,145594])]"/>
                    <filter string="Date" name="order_date"
                            domain="[('order_date', '>=', '2023/01/01')]"/>
                </search>
            </field>
        </record>

	    <record id="action_sale_in_report" model="ir.actions.act_window">
	        <field name="name">Sale In Report</field>
	        <field name="res_model">sale.in.reports</field>
	        <field name="binding_view_types">pivot</field>  
	        <field name="view_id" eval="sale_in_report_pivot_view"></field>
	        <field name="context">{"search_default_partner_id":[194420,238589,40524,53334,134293,172463,29959,292780,73961,61248,32471,286273,307513,145594]}</field>
	        <field name="view_mode">pivot</field>
	    </record>

	    <menuitem id="menu_sale_in_report"
			      name="Sale In Report"
			      action= "action_sale_in_report"
			      parent="point_of_sale.menu_point_rep"
			      sequence="3"/>

    </data>
</odoo>
