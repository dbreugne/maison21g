    	<record id="account_payment_term_30%deposite70%payment" model="account.payment.term">
            <field name="name">30% Deposite 70% Payment</field>
            <field name="note">Payment terms: 30 Days</field>
            <field name="line_ids" eval="[(5, 0), (0, 0, {'value': 'percent', 'value_amount': 30.0, 'sequence': 1, 'days': 0, 'option': 'day_after_invoice_date'}),
                (0, 0, {'value': 'percent', 'value_amount': 70.0, 'sequence': 1, 'days': 0, 'option': 'day_after_invoice_date'}),
                (0, 0, {'value': 'balance', 'value_amount': 0.0, 'sequence': 500, 'days': 60, 'option': 'day_after_invoice_date'})]"/>
        </record>

