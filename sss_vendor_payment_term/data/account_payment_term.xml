        </record>
        <record id="email_send_account_payment_term" model="mail.template">
            <field name="name">Send Email For Payment Term</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="email_from">${ctx['partner_from_email']} </field>
            <field name="email_to">${object.email}</field>
            <field name="subject">Payment Term 30% DownPayment</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${ctx['user_name']},
                            <br/>
                            <br/>
                            <br/>
                                30% DownPayment For Vendor Payment 
                            <br/>
                            <br/>
                            Regards,
                            <br/>
                            ${ctx['partner_from_name']}
                            <br/>
                        </p>
                        <br/>
                        <p>Reference :- ${ctx['my_url']}</p>
                        <br/>
                    </div>
                </div>
            </field>
        </record>
