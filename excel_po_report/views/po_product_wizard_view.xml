<odoo>


    <record model="ir.ui.view" id="po_order_product_xlsx_report_wizard">
        <field name="name">po.order.product.xlsx</field>
        <field name="model">po.order.product.xlsx</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form >
                <group>
                    <group>
                        <field name="apply_date"/>
                        <field name="products" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="date_start" required="apply_date == True" invisible="apply_date == False" />
                        <field name="date_end" required="apply_date == True" invisible="apply_date == False" />
                    </group>
                </group>
                <footer>
                    <button name="get_report" string="Get Report" type="object" class="oe_highlight"/>
<!--                     <button name="get_pdf_report" string="Get PDF Report" type="object" class="oe_highlight"/>-->
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
     <record id="action_report_wizard" model="ir.actions.act_window">
        <field name="name">Po order Product xlsx report</field>
        <field name="res_model">po.order.product.xlsx</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        
    </record>
    

    <menuitem action="action_report_wizard"
              id="menu_po_product_xlsx_report_wizard"
              parent="purchase.purchase_report"/>


</odoo>
