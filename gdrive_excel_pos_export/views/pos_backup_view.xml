<odoo>
    <data>
        <record id="view_gdrive_backup_config_form" model="ir.ui.view">
            <field name="name">pos.gdrive.backup.form</field>
            <field name="model">pos.gdrive.backup</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Back-up view">
                    <sheet>
                        <group name="config_google" string="Google Drive Setup">
                            <group>
                                <field name="name"/>
                                <field name="drive_folder_id"/>
                            </group>
                        </group>
<!--                        <footer>-->
<!--                            <button name="upload_report_to_gdrive" string="Upload Report" type="object" class="oe_highlight"/>-->
<!--                            <button string="Cancel" special="cancel"/>-->
<!--                        </footer>-->


                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_gdrive_backup_config_tree" model="ir.ui.view">
            <field name="name">pos.gdrive.backup.tree</field>
            <field name="model">pos.gdrive.backup</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Backups">
                    <field name="name"/>
                    <field name='drive_folder_id'/>
                </tree>
            </field>
        </record>

        <record id="action_backup" model="ir.actions.act_window">
            <field name="name">Configure Backups</field>
            <field name="res_model">pos.gdrive.backup</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_gdrive_backup_config_tree"/>
        </record>

        <menuitem id="auto_gdrive_backup_menu" name="Backup" parent="base.menu_custom"/>
        <menuitem parent="auto_gdrive_backup_menu" action="action_backup" id="backup_conf_menu"/>

        <record id="pos_gdrive_backup_cron" model="ir.cron">
            <field name="name">POS Backup Cron Job</field>
            <field name="model_id" ref="model_pos_gdrive_backup"/>
            <field name="state">code</field>
            <field name="code">model.upload_report_to_gdrive()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name="numbercall">-1</field>
            <field name="priority" eval="1" />
            <field name="doall" eval="False"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:00:01')" />
        </record>
    </data>
</odoo>
