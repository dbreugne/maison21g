<odoo>
    <record model="ir.ui.view" id="attendance_recap_report_wizard">
        <field name="name">pos.order.xlsx</field>
        <field name="model">pos.order.xlsx</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form >
                <group>
                    <group>
                        <field name="date_start"/>
                    </group>
                    <group>
                        <field name="date_end"/>
                    </group>
                </group>
                <footer>
                    <button name="get_report" string="Get Report" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

     <record id="action_report_wizard" model="ir.actions.act_window">
        <field name="name">Pos order xlsx report</field>
        <field name="res_model">pos.order.xlsx</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem action="action_report_wizard"
              id="menu_attendance_report_wizard"
              parent="point_of_sale.menu_point_rep"/>


</odoo>
