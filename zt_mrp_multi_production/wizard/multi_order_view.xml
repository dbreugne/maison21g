<?xml version="1.0" encoding="utf-8"?>
<odoo>

 <record id="stock_picking_location_form_view" model="ir.ui.view">
        <field name="name">stock.picking.type.form</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='usage']" position ="after">
                <field name="mo_picking_type"/>
            </xpath>
        </field>
    </record>

    <record id="batch_pickup_form_view" model="ir.ui.view">
        <field name="name">Batch MRP Order</field>
        <field name="model">multi.mrp</field>
        <field name="arch" type="xml">
            <form string="Batch MRP" version="7.0">
                <group>
                    <field name="name"/>
                    <field name="picking_type_id" invisible="1"/>

                </group>
                <notebook>
                    <page string="Lines">
                    <field name="multimrp_order_line_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="product_id" required="True"/>
                            <field name="product_uom_id"/>
                            <field name="qty_hand" readonly="1"/>
                            <field name="picking_type_id"/>
                            <field name="location_src_id"/>
                            <field name="location_id"/>
                            <field name="qty_produce" required="True"/>
                            <field name="varity_id" invisible="1"/>
                            <field name="schedule_date"/>
                            <field name="bom_id" required="True"/>


                        </tree>
                    </field>
                </page>
                </notebook>


                <footer>
                    <button name="generate_mrp_batch" string="Generate Batch MRP" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>

    <record id="batch_mrp_multi" model="ir.actions.act_window">
        <field name="name">Batch MRP Order For on Hand Quantity Zero</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">multi.mrp</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="batch_pickup_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Batch MRP" parent="mrp.menu_mrp_root" id="main_batch_harvest"/>

    <menuitem name="Generate Batch MRP"
              id="menu_batch_action_report" action="batch_mrp_multi" parent="main_batch_harvest"  sequence="1"/>


</odoo>
