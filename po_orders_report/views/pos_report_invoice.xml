<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="po_orders_report_pdf">
            <t t-call="web.html_container">
                <t t-foreach="doc_ids" t-as="doc">
                    <t t-call="po_orders_report.po_orders_report_id" t-lang="lang"/>
                </t>
            </t>
        </template>

        <template id="po_orders_report_id">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="address">
                        <address t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />

                        <t t-if="doc.company_id.country_id.vat_label" t-esc="doc.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                    </t>


                    <h2>  Invoice:  <span t-if="doc.name != '/'" t-field="doc.name"/></h2><br/>

                    <div class="col-xs-6 text-left">
                        <span style="color:#000000 !important;" t-field="doc.partner_id" /><br/>
                        <span style="color:#000000 !important;" t-field="doc.partner_id.street" /><br/>
                        <span style="color:#000000 !important;" t-field="doc.partner_id.zip"/><br/>
                        <span style="color:#000000 !important;" t-field="doc.partner_id.city" /><br/>
                        <span style="color:#000000 !important;" t-field="doc.partner_id.country_id" /><br/>
                        <span style="color:#000000 !important;" t-field="doc.partner_id.phone" /><br/>
                        <span style="color:#000000 !important;" t-field="doc.partner_id.email" /><br/>
                    </div>

                    <div>
                        <div class="row mt32 mb32" id="informations">

                            <div class="col-auto mw-100 mb-2">
                                <strong>Date: </strong>
                                <span t-field="doc.date_order" style="margin-right:20px" />
                            </div><br></br>
                            <div class="col-auto mw-100 mb-2">
                                <strong>Receipt Number: </strong>
                                <span t-field="doc.pos_reference" />
                            </div>
                        </div>
                    </div>
                    <br/>
                    <table class="table table-condensed table-striped table-bordered" name="lines" style="width:100%">
                        <thead>
                            <tr style="font-weight:bold;background-color: #eeeeee;">
                                <td>Description</td>
                                <td>Quantity</td>
                                <td>Unit Price</td>
                                <td>Disc</td>
                                <td>Taxes</td>
                                <td>Total Price</td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.lines" t-as="line">
                                <tr>
                                    <td>
                                        <t t-if="line.product_id.name">
                                            <span t-field="line.product_id.name"/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-if="line.qty">
                                            <span t-field="line.qty"/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-if="line.price_unit">
                                            <span t-field="line.price_unit"/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-if="line.discount">
                                            <span t-field="line.discount"/>
                                        </t>

                                    </td>
                                    <td>
                                        <t t-if="line.tax_ids">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-if="line.price_subtotal_incl">
                                            <span t-field="line.price_subtotal_incl"/>
                                        </t>

                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <br/><br/>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm;page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>

                </t>
            </t>

        </template>



        <record id="pos_invoice_orders_maison" model="ir.actions.report">
            <field name="name">Print Invoice</field>
            <field name="model">pos.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">po_orders_report.po_orders_report_pdf</field>
            <field name="report_file">po_orders_report.po_orders_report_pdf</field>
            <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
            <field name="binding_type">report</field>
           
        </record>
        <report
                id="pos_invoice_orders_maison"
                model="pos.order"
                string="Print Invoice"
                report_type="qweb-pdf"
                name="po_orders_report.po_orders_report_pdf"
                file="po_orders_report.po_orders_report_pdf"
        />

    </data>
</odoo>

