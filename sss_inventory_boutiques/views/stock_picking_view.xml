<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="stock_picking_view_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.view.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//header/button[@name='button_validate']" position="before">
        		<button name="approve_button" type="object" string="Approve" attrs="{'invisible': ['|', ('state', '!=', 'confirmed'), ('picking_type_code', '!=', 'internal')]}"/>
        		<button name="reject_button" type="object" string="Reject" attrs="{'invisible': ['|', ('state', '!=', 'confirmed'), ('picking_type_code', '!=', 'internal')]}"/>
        	</xpath>
        	<xpath expr="//button[@name='action_assign']" position="replace">
        		<button name="action_assign" attrs="{'invisible': ['|',('show_check_availability', '=', False), '|', ('state', '!=', 'approve'), ('picking_type_code', '!=','internal')]}" string="Check Availability" type="object" class="oe_highlight" groups="base.group_user"/>
                <button name="action_assign" attrs="{'invisible': ['|',('show_check_availability', '=', False), ('picking_type_code', '=','internal')]}" string="Check Availability" type="object" class="oe_highlight" groups="base.group_user"/>
        	</xpath>
        	<xpath expr="//button[@name='action_toggle_is_locked']" position="replace">
        		<button name="action_toggle_is_locked" attrs="{'invisible': ['|', ('state', 'in', ('draft','cancel','confirmed')), ('is_locked', '=', False)]}" string="Unlock" groups="stock.group_stock_manager" type="object" help="If the picking is unlocked you can edit initial demand (for a draft picking) or done quantities (for a done picking)."/>                    
        		
        	</xpath>
        	<xpath expr="//button[@name='button_validate']" position="replace">
        	</xpath>
            <xpath expr="//button[@name='button_validate']" position="replace">                
            </xpath>
            <xpath expr="//header/button[@name='approve_button']" position="after">
                <button name="button_validate" attrs="{'invisible': ['|', ('show_validate', '=', False), '|',('state', 'not in', ('approve', '')),('picking_type_code', '!=', 'internal')]}" string="Validate" type="object" groups="stock.group_stock_user" class="o_btn_validate"/>
                <button name="button_validate" attrs="{'invisible': ['|',('show_validate', '=', False), '|', ('state', 'not in', ('waiting', 'confirmed')),('picking_type_code', '=', 'internal')]}" string="Validate" type="object" groups="stock.group_stock_user" class="o_btn_validate"/>
                <button name="button_validate" attrs="{'invisible': ['|', ('show_validate', '=', False), '|', ('state', 'in', ('waiting','confirmed')),('picking_type_code', '=', 'internal')]}" string="Validate" type="object" class="oe_highlight" groups="stock.group_stock_user"/>
            </xpath>
        </field>
    </record>

	<record id="action_stock_picking_internal_transfer" model="ir.actions.act_window">
        <field name="name">Transfers</field>
        <field name="res_model">stock.picking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,kanban,form,calendar</field>
        <field name="domain"></field>
        <field name="context">{'picking_type_code': 'internal', 'default_company_id': allowed_company_ids[0]}</field>
        <field name="search_view_id" ref="stock.view_picking_internal_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new transfer
            </p><p>
                Transfers allow you to move products from one location to another.
            </p>
        </field>
    </record>	
	<menuitem 
			action="action_stock_picking_internal_transfer"
			id="menu_internal_transfer"
			parent="point_of_sale.menu_point_rep"
			name="Internal Transfer"/>
</odoo>