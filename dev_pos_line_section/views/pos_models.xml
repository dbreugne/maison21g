<odoo>
	
	<!-- Inherited view -->
	
	<record model="ir.ui.view" id="dev_pos_order_form_view">
        <field name="name">dev.pos.order.inherited.view</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lines']" position="attributes">
                <attribute name="widget">section_and_note_one2many</attribute>
                <attribute name="mode">tree</attribute>
            </xpath>
            <xpath expr="//field[@name='full_product_name']" position="before">
                <field name="name" required = 'display_type == True' widget="section_and_note_text" readonly="1" force_save="1" column_invisible="0"/>
                <field name="display_type" column_invisible="1"/>
                
            </xpath>
        </field>
    </record>


    <record id="pos_config_view_form_inherit_pways" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_section']" position="after">

                <block title="PoS widcard card" id="pos_widcard_section">
                    
                    <setting help="Start selling from a default product category">
                        <field name="iface_widcard"/>
                        <div class="content-group mt16" invisible="not iface_widcard">
                            <label string="Product" for="wildcard_product_id" class="col-lg-3 o_light_label"/>
                            <field name="wildcard_product_id" domain="[('available_in_pos','=','True'),
                                ('is_widcard','=','True')]"/>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>


    <record id="product_template_form_view_pways" model="ir.ui.view">
        <field name="name">product.template.form.inherit.pways</field>
        <field name="model">product.template</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='available_in_pos']" position="after">
                <field name="is_widcard"/>
            </xpath>
        </field>
    </record>
   
</odoo>
