<odoo>
    <record id="bo_view_member_form" model="ir.ui.view">
        <field name="name">view.member.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="birthdate" required="0" invisible="1"/>
                <field name="gender" widget="radio" invisible="1"/>
                <field name="married" widget="radio" invisible="married == 'no'"/>
                <field name="date_wedding" invisible="married == 'no'"/>
                <field name="children" widget="radio" invisible="1"/>
                <field name="no_children" invisible="children == 'no'"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="membership"/>
            </xpath>
        </field>
    </record>
</odoo>
