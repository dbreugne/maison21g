<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    	<record id="top_5_discount_product_pos_pivot_view" model="ir.ui.view">
	        <field name="name">Top Discouted Product Of POS.pivot.view</field>
	        <field name="model">top.discount.product.pos</field>
	        <field name="arch" type="xml">
	            <pivot string="Top Discouted Product Of POS" disable_linking="True">
                    <field name="config_id" type="row"/>
                    <field name="product_id" type="row"/>
                    <field name="pos_order_id"/>
                    <field name="discount_rate" type="measure"/>
	            </pivot>
	        </field>
    	</record>

    	<record id="action_top_5_discount_product_pos" model="ir.actions.act_window">
	        <field name="name">Top Discouted Product Of POS</field>
	        <field name="res_model">top.discount.product.pos</field>
	        <field name="binding_view_types">pivot</field>  
	        <field name="view_id" eval="top_5_discount_product_pos_pivot_view"></field>
	        <field name="view_mode">pivot</field>
	    </record>

    	<menuitem id="menu_discounted_product"
			      name="Top Discouted Product Of POS"
			      action= "action_top_5_discount_product_pos"
			      parent="point_of_sale.menu_point_rep"
			      sequence="3"/>

    </data>
</odoo>