<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_send_first_approval" model="mail.template">
            <field name="name">Email Send First Approval</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="email_from">${ctx['partner_from_email']}</field>
            <field name="email_to">${object.email}</field>
            <field name="subject">Purchase Order First Level Approval</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${ctx['user_name']},
                            <br/>
                            <br/>
                                Purchase Order has been Created. Please Approvel it.
                            <br/>
                            <br/>
                            Regards,
                            <br/>
                            ${ctx['partner_from_name']}
                            <br/>
                        </p>
                        <br/>
                            <p>Reference :- ${ctx['my_url']}</p>
                        <br/>
                    </div>
                </div>
            </field>
    </record>

