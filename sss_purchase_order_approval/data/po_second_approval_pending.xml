<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_auto_send_mail_second_approval_pending" model="ir.cron">
        <field name="name">Auto Send Mail Second Approval Pending</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">1</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 11:30:00')"/>
        <!-- <field name="nextcall" eval="(DateTime.now().replace(hour=2, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" /> -->
        <!-- <field name="doall" eval="False"/> -->
        <field name="model_id" ref="model_purchase_order"/>
        <field name="code">model._auto_send_mail_second_approval_pending()</field>
        <field name="state">code</field>
    </record>

    <record id="ir_cron_all_po_status" model="ir.cron">
        <field name="name">Auto Send Mail Po's List</field>
        <field name="interval_number">7</field>
        <field name="interval_type">days</field>
        <field name="numbercall">1</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=7)).strftime('%Y-%m-%d 11:30:00')"/>
        <!-- <field name="nextcall" eval="(DateTime.now().replace(hour=2, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" /> -->
        <!-- <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 11:30:00')"/> -->
        <!-- <field name="doall" eval="False"/> -->
        <field name="model_id" ref="model_purchase_order"/>
        <field name="code">model._all_status_po()</field>
        <field name="state">code</field>
    </record>
</odoo>
