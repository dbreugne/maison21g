            </xpath>
            <xpath expr="//button[@id='bid_confirm']" position="replace">
                <button name="button_confirm" type="object" states="sent" string="Confirm Order" class="oe_highlight" id="bid_confirm" invisible="1"/>
            </xpath>
            <xpath expr="//button[@id='draft_confirm']" position="replace">
                 <button name="button_confirm" type="object" string="Confirm Order" id="draft_confirm" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='button_confirm']" position="after">
                <button name="button_first_approve" type="object" string="First Level Approvel" attrs="{'invisible': ['|', ('login_user', '=', False), ('state', '!=',  'draft')]}"/>
