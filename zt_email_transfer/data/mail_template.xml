<?xml version="1.0" ?>
<odoo>

    <data noupdate="0">
        <record id="stock_transfer_email_template" model="mail.template">
            <field name="name">Send by email Transfer Details</field>
            <field name="model_id" ref="zt_email_transfer.model_stock_picking"/>
            <field name="subject">Transfer Details (Ref {{object.name}})</field>
            <field name="email_from">{{(object.user_id.email_formatted or user.email_formatted)}}</field>
            <field name="partner_to">{{object.partner_id.id}}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        
                        Hello,
                        <br/><br/>
                        PFA.
                        <br/><br/>
                        Your Product Transfer Details are attached. <br/><br/>

                        <strong> Transfer ID :<t t-out="object.name"/></strong> <br/><br/>
                        <strong>Scheduled Date : <t t-out="object.scheduled_date"/></strong> <br/><br/>
                        <strong>Responsible Person: <t t-out="object.user_id.name"/></strong> <br/><br/>

                        <br/><br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/>
                    </p>
                </div>
            </field>
            <field name="report_template_ids" eval="[(4, ref('zt_email_transfer.action_package_inventory'))]"/>
            <!-- <field name="report_template" ref="zt_email_transfer.action_package_inventory"/> -->
            <!-- <field name="report_name">${(object.name or '').replace('/','_')}</field> -->
            <field name="lang">{{object.partner_id.lang}}</field>
            
            <field name="auto_delete" eval="True"/>
        </record>
    </data>

</odoo>
